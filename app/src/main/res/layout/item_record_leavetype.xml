<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_gray"
        android:padding="10dp"
        android:text="请假"
        android:textColor="@color/colorBlack"/>


    <com.foxconn.beacon.salary.view.StatisticsItemView
        android:id="@+id/statisticsItem_leave_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:item_right_name="无请假"
        app:item_left_name="请假类型"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorGray"/>

    <com.foxconn.beacon.salary.view.StatisticsItemView
        android:id="@+id/statisticsItem_leave_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:item_right_name="0小时0分钟"
        app:item_left_name="请假时长"/>
</LinearLayout>